<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Calculator_Prelim"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:weightSum="1"
    android:orientation="vertical">


    <Button
        android:id="@+id/addition_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="102dp"
        android:text="+"
        android:textSize="24sp"
        android:layout_below="@+id/second_number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/multiplication_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="24sp"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_alignBaseline="@+id/subtraction_btn"
        android:layout_alignBottom="@+id/subtraction_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/subtraction_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/addition_btn"
        android:layout_alignBottom="@+id/addition_btn"
        android:layout_toLeftOf="@+id/multiplication_btn"
        android:layout_toStartOf="@+id/multiplication_btn"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />

    <Button
        android:id="@+id/Division_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="/"
        android:textSize="24sp"
        android:layout_below="@+id/addition_btn"
        android:layout_alignLeft="@+id/addition_btn"
        android:layout_alignStart="@+id/addition_btn" />

    <Button
        android:id="@+id/clear_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_alignLeft="@+id/subtraction_btn"
        android:layout_alignStart="@+id/subtraction_btn"
        android:layout_alignTop="@+id/Division_btn"
        android:text="C" />

    <Button
        android:id="@+id/Exit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/clear_btn"
        android:layout_alignBottom="@+id/clear_btn"
        android:layout_toRightOf="@+id/subtraction_btn"
        android:layout_toEndOf="@+id/subtraction_btn" />

    <EditText
        android:id="@+id/first_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter 1st number"
        android:inputType="number"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/second_number"
        android:layout_alignStart="@+id/second_number" />

    <EditText
        android:id="@+id/second_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter 2nd number"
        android:inputType="number"
        android:layout_below="@+id/first_number"
        android:layout_toLeftOf="@+id/multiplication_btn"
        android:layout_toStartOf="@+id/multiplication_btn" />

    <TextView
        android:id="@+id/txtView_Results"
        android:textSize="24sp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/subtraction_btn"
        android:layout_alignStart="@+id/subtraction_btn"
        android:layout_below="@+id/second_number"
        android:layout_marginTop="23dp"
        android:text="0" />


</RelativeLayout>
